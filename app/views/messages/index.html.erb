<h1>User List:</h1>
<div id="links">
  <%= link_to "home", users_path %><br/>
  <%= link_to "new message", new_message_path %><br/>
  <%= link_to "delete messages", delete_messages_path, :action => :delete_messages %><br/><br/>
</div>

<% @messages.fetch do |f| %>
  <% f.to_hash.each do |key, value| %>
    <% unless key == "uid" %>
      <div class = "item">
      <div class="image"><%= image_tag(Image.get_gravatar JSON.parse(value)['email'])%></div>
        <%= key %>
        <%= JSON.parse(value)['content'] %><br/>
      </div>
    <%end%>
  <%end%>
<%end%>
